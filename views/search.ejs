<!DOCTYPE html>
<html lang="en">

<head>
    <title>ContentFull POC Site</title>
    <% include partials/head.ejs %>
</head>

<body>
	<% include partials/menu.ejs %>
	
	<br>		<br>	<br>	
	
	<div class="container">
		
		<% include partials/breadcrumb.ejs %>
		
		<% include partials/message.ejs %>

        <div id="page-content-wrapper">
            <div class="container-fluid">
			
                <div class="row">
                    <div class="col-lg-12">                      
                         <form method="post" action="" class="form-inline">
                           <div class="form-group">
								<label class="sr-only" for="search">Search Text: </label>
								<input type="text" placeholder="Enter text" class="form-control" required name="search" value="<%= term %>">								
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Search</button>
                            </div>                    
                         </form>
						 
                    </div>
              </div>
          </div>
      </div>
    </div>
	
	
	<% if( typeof(products) !== 'undefined' && term) { %>
	<br>		<br>	<br>	<br><br>
	<div class="container">
		<% if (products.length > 0) { %>
		<div class="well well-sm">
			<strong>Display</strong>
			<div class="btn-group">
				<a href="#" id="list" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-th-list">
				</span>List</a> <a href="#" id="grid" class="btn btn-default btn-sm"><span
					class="glyphicon glyphicon-th"></span>Grid</a>
			</div>
		</div>
		<div id="products" class="row list-group">
			<% for (var i = 0; i < products.length; i++) { %>
				<div class="item  col-xs-4 col-lg-4">
					
					<div class="thumbnail">
						<a href="/view/<%= products[i].sys.id %>">
						<img class="group list-group-image img-responsive" src="http:<%- products[i].fields.image.fields.file.url %>?w=400&h=250&fit=pad" alt="" />
						</a>
						<div class="caption">
							<a href="/view/<%= products[i].sys.id %>">
							<h4 class="group inner list-group-item-heading text-capitalize"><%= products[i].fields.product_title.substr(0,50) %></h4>
							</a>
							<p class="group inner list-group-item-text text-lowercase"><%= products[i].fields.description.substr(0,130) %></p>
							<div class="row">
								<div class="col-xs-12 col-md-6">
									<p class="lead">$ <%- products[i].fields.product_price %></p>
								</div>
								<div class="col-xs-12 col-md-6">
									<a class="btn btn-success" href="javascript:void();">Add to cart</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			<% } %>
		</div>
		<% } else { %>  
		<div align="center" style="color:red;">No products matched...</div>
		<% } %>  
	</div>
	<% } %>
	
  <% include partials/jsIncludes.ejs %>

</body>

</html>
