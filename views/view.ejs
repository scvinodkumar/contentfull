<!DOCTYPE html>
<html lang="en">

<head>
    <title>ContentFull POC Site</title>
    <% include partials/head.ejs %>
	<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1" crossorigin="anonymous">
</head>

<body>
	<% include partials/menu.ejs %>
	
	<br><br><br>
		
	<div class="container">			
	
		<% include partials/breadcrumb.ejs %>
		
		<% include partials/message.ejs %>
		
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
						<div class="page-header">
							<h2><%-products[0].fields.product_title%></h2>
							<p class=".text-info">Created by <kbd>Vinodkumar</kbd> on <%-products[0].sys.createdAt.toUTCString() %></p>
						</div>
						<div class="col-md-8">
							<div class="text-lowercase">
								<%=products[0].fields.description%>
							</div>
						</div>
						<div class="col-md-4">
							<div class=".text-center">
							  <img class="img-responsive" src="http:<%- products[0].fields.image.fields.file.url %>"/>
							</div>
						</div>
                    </div>
					<div class="col-md-12">					
						<form method="post" action="/comments/<%-products[0].sys.id %>/saveComment">
                           <div class="form-group">
                               <label for="message" class="col-sm-2 control-label">Add your comments: </label>
                                   <div class="col-sm-6">
                                      <textarea class="form-control" required name="comment" rows="4" placeholder="Add your commments "></textarea>
                                   </div>
                            </div>
                            <div class="form-group">
                              <div class="">
                                <button type="submit" class="btn btn-primary">Submit Comment</button>
                              </div>
                            </div>
                        </form>
					</div>
				</div>
				<div class="row bootstrap snippet">
					<div class="col-md-12 ">
						<div class="blog-comment">
							<h3 class="text-success">Comments</h3>
							<hr/>
							<ul class="comments">												
							<% for (var i = 0; i < comments.length; i++) { %>	
								<li class="clearfix">
									<img src="https://bootdey.com/img/Content/user_1.jpg" class="avatar" alt="">
									<div class="post-comments">
										<p class="meta"><%- comments[i].sys.createdAt.toUTCString() %> <a href="#"><%- comments[i].fields.owner %></a> says : </p>
										<p><%= comments[i].fields.comments %></p>
									</div>
								</li>
							<% } %>						
							</ul>
						</div>
					</div>					
				</div>
			</div>
		</div>		
    </div>
	
  <% include partials/jsIncludes.ejs %>

</body>

</html>
